<%- include('./../layouts/header') %>
<div class="container mx-auto px-5 pt-3">
    <div class="grid">
        <div class="flex justify-between align-middle">
            <p class="text-lg">AWG History Transaction</p>
            <div class="flex gap-2 justify-between">
                <a href="/users/create" class="block uppercase shadow bg-indigo-800 hover:bg-indigo-700 focus:shadow-outline focus:outline-none text-white text-xs py-3 px-3 rounded" id="button-filter">Tambah Data User</a>
            </div>
        </div>
    
        <div>
            <table class="table table-auto border-collapse border w-full mt-12">
                <thead>
                    <tr>
                        <th class="border p-3">Id</th>
                        <th class="border p-3">Nama</th>
                        <th class="border p-3">Opsi</th>
                    </tr>
                </thead>
                <tbody id="data">
                    <% if(users.length == 0) { %>
                        <p>Tidak Ada User</p>
                    <% } %>
                    <% users.forEach((user, key) => { %>
                        <tr>
                            <td class="border p-3"><%= user.id %></td>
                            <td class="border p-3"><%= user.name %></td>
                            <td class="border p-3">
                                <div class="flex gap-2">
                                    <a href="/users/<%= user.id %>" class="block uppercase shadow bg-green-800 hover:bg-green-700 focus:shadow-outline focus:outline-none text-white text-xs py-3 px-3 rounded" id="button-filter">Edit</a>
                                    <a href="/users/<%= user.id %>/delete" class="block uppercase shadow bg-red-800 hover:bg-red-700 focus:shadow-outline focus:outline-none text-white text-xs py-3 px-3 rounded" id="button-filter">Delete</a>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
    
        </div>
    </div>
</div>

<%- include('./../layouts/footer') %>
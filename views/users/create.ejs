<%- include('./../layouts/header') %>
<div class="container mx-auto px-5 pt-3">
    <h1 class="text-3xl">Tambah Pengguna</h1>
    <form action="<%= user ? `/users/${user.id}` : '/users' %>" method="POST">
        <div class="flex flex-col gap-8 mt-12">
            <div class="col-6">
                <input type="text" id="name" name="name" placeholder="Nama Lengkap" value="<%= user && user.name ? user.name : null %>"
                    class="w-1/4 bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-indigo-500 focus:bg-transparent focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
            </div>
            <div class="col-6">
                <input type="text" id="app_id" name="app_id" placeholder="Api Id" value="<%= user && user.app_id ? user.app_id : null %>"
                    class="w-1/4 bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-indigo-500 focus:bg-transparent focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
            </div>
            <div class="col-6">
                <input type="text" id="app_key" name="app_key" placeholder="Api Key" value="<%= user && user.app_key ? user.app_key : null %>"
                    class="w-1/4 bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-indigo-500 focus:bg-transparent focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
            </div>
            <div class="col-6">
                <input type="text" id="client_id" name="client_id" placeholder="Client Id" value="<%= user && user.client_id ? user.client_id : null %>"
                    class="w-1/4 bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-indigo-500 focus:bg-transparent focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
            </div>
            <div class="col-6">
                <input type="text" id="client_secret" name="client_secret" placeholder="Client Secret" value="<%= user && user.client_secret ? user.client_secret : null %>"
                    class="w-1/4 bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-indigo-500 focus:bg-transparent focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
            </div>
            <div class="col-6">
                <button class="block uppercase shadow bg-indigo-800 hover:bg-indigo-700 focus:shadow-outline focus:outline-none text-white text-xs py-3 px-3 rounded" id="button-filter"><%= user ? "Ubah Data User" : 'Tambah Data User' %></button>
            </div>
        </div>
    </form>
</div>

<%- include('./../layouts/footer') %>